<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Shop</h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12">
        <dl class="dl-horizontal">
          <dt><strong>Name:</strong></dt>
          <dd><%= @shop.name %></dd>
          <dt><strong>Phone:</strong></dt>
          <dd><%= @shop.phone %></dd>
          <dt><strong>Address:</strong></dt>
          <dd><%= @shop.address %></dd>
          <dt><strong>Info:</strong></dt>
          <dd><%= @shop.info %></dd>
          <dt><strong>Avatar:</strong></dt>
          <dd><%= image_tag(@shop.avatar_url) if @shop.avatar? %></dd>
        </dl>
        <div class="form-actions">
          <%= link_to "Back", shops_path, :class => 'btn btn-primary'  %>
          <%= link_to "Edit",
          edit_shop_path(@shop), :class => 'btn btn-primary' %>
          <%= link_to "Destroy",
          shop_path(@shop),
          :method => 'delete',
          :confirm => 'Are you sure?' ,
          :class => 'btn btn-danger' %>
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->