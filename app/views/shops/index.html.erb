<div class="page-header">
  <h1>Shops</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% if !@shops.blank?%>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= link_to shop.name, shop_path(shop) %></td>
        <td><%= shop.phone %></td>
        <td><%= shop.address %></td>
        <td>
          <%= link_to "edit",
                      edit_shop_path(shop), :class => 'btn btn-mini' %>
          <%= link_to "delete",
                      shop_path(shop),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New",
            new_shop_path,
            :class => 'btn btn-primary' %>
