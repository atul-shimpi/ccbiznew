<%= form_for @shop, :html => { :class => 'form-horizontal' , multipart: true  } do |f| %>
  <div class="form-group">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'text_field form-control', :placeholder => 'Enter text' %>
      <p class="help-block">Example block-level help text here.</p>
  </div>
  <div class="form-group">
      <%= f.label :phone, :class => 'control-label' %>
      <%= f.text_field :phone, :class => 'text_field form-control', :placeholder => 'Enter text' %>
      <p class="help-block">Example block-level help text here.</p>
  </div>
  <div class="form-group">
      <%= f.label :address, :class => 'control-label' %>
      <%= f.text_area :address, :class => 'text_field form-control', :rows => '3' %>
  </div>
  <div class="form-group">
      <%= f.label :info, :class => 'control-label' %>
      <%= f.text_area :info, :class => 'text_field form-control', :rows => '3' %>
  </div>
  <div class="form-group">
      <%= f.label :avatar, :class => 'control-label' %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
  </div>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to "cancel", shops_path, :class => 'btn btn-default' %>
<% end %>
                                

