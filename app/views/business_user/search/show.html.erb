<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Users</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 bg_wrapper">        
        <% if !@singleshops.blank?%>
        <% @singleshops.each do |shop| %>
        <div class="person_details clearfix">
          <div class="col-lg-2 col-sm-2">
            <%= image_tag(shop.avatar_url) if shop.avatar? %>            
          </div>
          <div class="col-lg-10 col-sm-10">
            <span><h4>Name:&nbsp;</h4><%= shop.name%></span>
            <span><h4>Address:&nbsp;</h4><%= shop.address%></span>
            <span><h4>Skills:</h4> <%= shop.skills%> </span>
            <p class="more_link"><a href="/business_user/userdetails/<%= shop.id %>">More...</a></p>
          </div>
        </div>
        <% end %>
        <% end %>
        

      </div>
    </div>
  </div>
</div>
