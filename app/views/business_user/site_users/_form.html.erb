<% if @siteuser.errors.full_messages.any? %>
<% @siteuser.errors.full_messages.each do |error_message| %>
<%= error_message if @siteuser.errors.full_messages.first == error_message %> <br />
<% end %>
<% end %>
<%= form_for @siteuser, url: business_shop_site_users_action(@siteuser, params[:action]),:html => { :class => '' , multipart: true  } do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :email, :class => 'control-label' %><span class="asterix">*</span>
      <%= f.text_field :email, :class => 'text_field form-control', :placeholder => 'Enter text', :required => '' %>
    </div>
    <div class="form-group">
      <%= f.label :shop_id %><br />
      <%= f.collection_select(:shop_id, current_business_user.shops.all, :id, :name, {:prompt => 'Select'}, {:class => 'form-control'}) %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'text_field form-control', :placeholder => 'Enter Password' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'text_field form-control', :placeholder => 'Enter password again' %>
    </div>
    

    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Cancel", business_user_site_users_path, :class => 'btn btn-default' %>
  </fieldset>
<% end %>
