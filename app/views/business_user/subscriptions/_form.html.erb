<% if @subscription.errors.full_messages.any? %>
<% @subscription.errors.full_messages.each do |error_message| %>
<%= error_message if @subscription.errors.full_messages.first == error_message %> <br />
<% end %>
<% end %>
<%= form_for @subscription , url: business_shop_subscriptions_action(@subscription, params[:action]),:html => { :class => '' , multipart: true  } do |f| %>  
  <fieldset>
  	<div class="form-group">
  		<%= f.label :name %><br />
  		<%= f.text_field :name, :class => 'text_field form-control'  %>
  	</div>
  	<div class="form-group">
  		<%= f.label :price %><br />
  		<%= f.text_field :price ,       hint: "Price in cents. Eq: 100 for 1 dolar/month subscriptions", :class => 'text_field form-control' %>
  	</div>
  	<div class="form-group">
  		<%= f.label :description %><br />
  		<%= f.text_area :description, :class => 'text_field form-control', :rows => '3' %>
  	</div>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  </fieldset>
<% end %>
