<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Subscriptions</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to 'New Subscription',  new_business_user_subscription_path, :class => 'btn btn-primary'   %>
          
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="dataTable_wrapper">           

            <table class="table table-striped">
              <thead>
                <tr>
                  <th> Name </th> 
                  <th> Price </th> 
                  <th> </th> 
                  
                  <th> </th> 
                </tr>
              </thead>

              <tbody>
                <% @subscriptions.each do |subscription| %>
                  <tr>
                    <td><%= subscription.name %></td>
                    <td><%= number_to_currency subscription.price, unit: "Rs " %></td>
                    
                    <td><%= link_to 'Edit',  edit_business_user_subscription_path(subscription)%></td>
                    <td>
                    <%= link_to "Delete",
                                    business_user_subscription_path(subscription),
                                    :method => :delete,
                                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                    :class => 'btn btn-mini btn-danger' %>
                    
                  </tr>
                <% end %> 
              </tbody>
            </table>

            
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>
<!-- /#page-wrapper -->

