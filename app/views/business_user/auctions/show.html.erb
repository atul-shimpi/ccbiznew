<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Auction</h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12">   
        <ul class="nav nav-tabs">          
          <li class="active"><a data-toggle="tab" href="#teams">Teams</a></li>
          <li><a href="<%= business_user_players_path(:auction_id => @auction.id) %>">Players</a></li>
        </ul>
        
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to "Create a Team", new_business_user_team_path(:auction_id => @auction.id), :class => 'btn btn-primary' %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover dataTables-example" id="dataTables-example">
              <thead>
                <tr>
                  <th>Name</th>               
                  <th>Points</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if !@teams.blank?%>
                  <% @teams.each do |team| %>
                    <tr>
                      <td><%= team.name %></td>
                      <td><%= team.points %></td>
                      <td>
                        <%= link_to "Edit", {:controller => "teams", :action => "edit", :auction_id => @auction.id, :id => team.id} , :class => 'btn btn-primary btn-mini'%>

                        <%= link_to "Delete", {:controller => "teams", :action => "destroy", :auction_id => @auction.id, :id => team.id} ,
                                    :method => :delete,
                                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                    :class => 'btn btn-mini btn-danger'%>
                        
                        
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>


    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
