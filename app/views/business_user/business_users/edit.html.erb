  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong style="font-size:16px">Update Profile</strong>
        </div>
        <div class="panel-body col-lg-6">
          <div class="row">
            <div class="col-lg-12">

<%= form_for @user, url: business_user_business_user_path(@user),:html => { :class => 'newform', :id => '', multipart: true, :novalidate => ''  } do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :first_name, :class => 'control-label' %><span class="asterix">*</span>
      <%= f.text_field :first_name, :class => 'text_field form-control', :placeholder => 'First Name', :required => '' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, :class => 'control-label' %><span class="asterix">*</span>
      <%= f.text_field :last_name, :class => 'text_field form-control', :placeholder => 'Last Name', :required => '' %>
    </div>
      <div class="form-group">
      <%= f.label :email, :class => 'control-label' %><span class="asterix">*</span>
      <%= f.email_field :email, :class => 'text_field form-control', :placeholder => 'Email', :required => '' %>
    </div>
        <div class="form-group">
      <%= f.label :phone, :class => 'control-label' %><span class="asterix">*</span>
      <%= f.text_field :phone, :class => 'text_field form-control', :placeholder => 'Phone', :required => '' %>
    </div>
    
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "cancel", business_user_offers_path, :class => 'btn btn-default' %>
  </fieldset>
<% end %>
</div>
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
