<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "newform"}) do |f| %>
          <%= devise_error_messages! %>
          <fieldset>
            <div class="form-group">
              <%= f.email_field :email, :class => 'form-control', autofocus: true, :placeholder => 'E-mail' %>
              </div>
            <div class="form-group">
              <%= f.password_field :password, :class => 'form-control', autocomplete: "off", :placeholder => 'Password' %>
            </div>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me, :value => 'Remember Me' %>Remember Me
              </label>
            </div>
            <%= f.submit "Log in", :class => 'submit_btn btn btn-lg btn-success btn-block' %>
          </fieldset>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
