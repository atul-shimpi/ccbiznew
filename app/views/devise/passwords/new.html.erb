<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Forgot your password?</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  				<%= devise_error_messages! %>
	          	<fieldset>
	            <div class="form-group">
	            	<%= f.label :email %><br />
	              <%= f.email_field :email, :class => 'form-control', autofocus: true, :required => '' %>
	            </div>
	            <%= f.submit "Send me reset password instructions", :class => 'submit_btn btn btn-lg btn-success btn-block' %>
	          </fieldset>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

