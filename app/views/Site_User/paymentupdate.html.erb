<div class="container main-content">
  <div class="latest_offers">
    <div class="row">
      <div class="col-lg-12">
        
        <p class="about_content">          
          <%= form_for @payment,url:'/user/paymentupdate' ,:html => { :class => '' , multipart: true  } do |f| %>
          
            <div class="form-group">
                <%= f.label :payment_transaction_token, :class => 'control-label' %>
                <%= f.text_field :payment_transaction_token, :class => 'text_field form-control', :placeholder => 'Enter text' %>
                <p class="help-block">Payment Reference Number</p>
            </div>
            <div class="form-group">
                <%= f.label :description, :class => 'control-label' %>
                <%= f.text_area :description, :class => 'text_field form-control', :placeholder => 'Enter text' %>
                
            </div>
            <div class="form-group">
                <%= collection_radio_buttons( :payment, :subscription_id, current_site_user.subscriptions.all, :id, :name_with_price) %>
            </div>
            
            <%= f.submit nil, :class => 'btn btn-primary' %>
            
          <% end %>
                                          


        </p>
      </div>
    </div>
  </div>

</div>

  
