<!Doctype HTML>
<HTML>
	<HEAD>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Latest compiled and minified CSS -->
		<%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag    'font-awesome.min'%>
		<%= stylesheet_link_tag    'template_2'%>
		<%= stylesheet_link_tag    'events'%>
  		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<!-- <link rel="stylesheet" href="bootstrap.min.css">

		<!-- Optional theme -->
<!-- 		<link rel="stylesheet" href="bootstrap-theme.min.css">
		<link rel="stylesheet" type="text/css" href="common.css"> -->
    	<%= render :partial => "layouts/metatags"%>
    	<title><%= !@shop.pagetitle.blank? ? @shop.pagetitle : 'CCbizon '+@shop.name %></title>
	</HEAD>
	<body>
    

		<nav class="navbar navbar-default">
		  <div class="container">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <a class="navbar-brand" href="">
		      <%= image_tag @shop.avatar_url, :class=> "img-responsive" , :style => "width: 148px;height:â€†43px"%>
		      </a>
		    </div>


		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">
		        <li class="active"><a href="http://<%= @shop.subdomain%>.<%= request.domain%>">Home</a></li>
		        <% if !@shop.info.blank? %>
		        <li><a href="/aboutus"><span>About Us</span></a></li>
		        <% end %>		        		        
		        <% if !@shop.events.blank? %>		        
		        <li><a href="/shopevents"><span>Events</span></a></li>
		        <% end %>
		        <li><a href="/contactus">Contact Us</a></li>
		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>
    <%= render :partial => "layouts/carousel"%>		
    <%= yield %>
		<footer class="clearfix">
			<div class="container">
				<div class="row">
					<p class="pull-left col-lg-6 copyright">Copyright @ 2015.<span>Powered by <a href="http://www.jalaram-techsolutions.com" target="blank"> jalaram-techsolutions.com</a></span></p>
					<div class="pull-right col-md-3">	          
	         <%= render :partial => "layouts/social_media"%>
        	</div>
				</div>
			</div>
		</footer>
		<%= render :partial => "layouts/googleanalytics"%> 		
	</body>
</HTML>
