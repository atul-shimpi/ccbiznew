<ul class="dropdown-menu multi-level">
  <% subcategories.each do |sub| %>
  	<% @submenu = Seodetail.where("parentpage = ? ", sub.id) %>
  	<% 
  		if @submenu.present? 
  		@attr = 'class="dropdown-toggle" data-toggle="dropdown"'	
  	%>
    	<li class="dropdown">
    <% else %>
    	<li class="top-clear">
    <% end %>
    
    	<% if sub.extrapage %>
    		<a <%= "#{@attr}" %> href='/page/<%=sub.id%>/<%=sub.pagename%>'><span><%=sub.pagename%></span></a>
    	<% else %>
    		<a <%= "#{@attr}" %> href='/page/<%=category.id%>/<%=category.pagename%>'><span><%=sub.pagename%></span></a>
    	<% end %>	    
  		<% if @submenu.present? %>
    		<%= render partial: 'layouts/mainmenu', locals: {subcategories: @submenu} %>
  		<% end %>
		</li>
  <% end %>
</ul>