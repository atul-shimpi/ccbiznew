<!Doctype HTML>
<HTML>
	<HEAD>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Latest compiled and minified CSS -->
		<%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag    'bootstrap-theme'%>
		<%= stylesheet_link_tag    'font-awesome.min'%>
		<%= stylesheet_link_tag    'events'%>
		<%= stylesheet_link_tag    'template_1'%>
		<%= stylesheet_link_tag    'lightbox'%>    	
  	<%= render :partial => "layouts/metatags"%>
  	<%= render :partial => "layouts/commonstyles"%>
    	
	</HEAD>
	<body>
    
		<nav class="navbar navbar-default">
		  <div class="container">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>

		      <a class="navbar-brand" href="/">
		      <%= image_tag @shop.avatar_url, :class=> "img-responsive" , :style => "max-width: 148px;"%>
		      </a>
		    </div>


		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">		      	
		        <li class=""><a href="/"><span><%= get_page_name(@shop.id,'home', "Home") %></span></a></li>
		        <% if !@shop.info.blank? %>
		        <li><a href="/aboutus"><span><%= get_page_name(@shop.id,'about',"About Us") %></span></a></li>
		        <% end %>
		        <% if !@shop.events.blank? %>		        
		        <li><a href="/shopevents"><span><%= get_page_name(@shop.id,'events',"Events") %></span></a></li>
		        <% end %>
		        <% if !@shop.auction.blank? %>		        
		        <li><a href="/auction"><span><%= get_page_name(@shop.id,'auction',"Live auction update") %></span></a></li>
		        <li><a href="/teams"><span><%= get_page_name(@shop.id,'team',"Teams") %></span></a></li>
		        <% end %>
		        <% if !@shop.shop_images.blank? %>
		        	<li><a href="/gallery"><span><%= get_page_name(@shop.id,'gallery',"Gallery") %></span></a></li>
		        <% end %>
		        <li><a href="/contactus"><span><%= get_page_name(@shop.id,'contact',"Contact Us") %></span></a></li>
		        <!--<li>
		        < % if !current_site_user %>
		        <a href="/site_users/sign_in"><span>Login</span></a>
		        < % else %>
		        	<span><%= link_to "#{"Log Out"}".html_safe, destroy_site_user_session_path, :method=>'delete' %></span>
		        < % end %>
		        </li-->
		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>
    <%#= render :partial => "layouts/carousel"%>	
    <% if @shop.isactive == 0 || @shop.isactive.to_s == "nil"%>		
    <div class="transparent">Waiting for administrator approval</div>	
    <% end %>
    <%= yield %>
    <footer class="clearfix">
			<div class="container">
				<div class="row">
					<p class="pull-left col-lg-6 copyright">Copyright @ 2015.<span>Powered by <a href="http://www.jalaram-techsolutions.com" target="blank"> jalaram-techsolutions.com</a></span></p>
					<div class="pull-right col-lg-3 address hidden-xs">
						<p>Contacts & info:</p>
					<% if !@shop.business_user.blank? %>		
     				<span class="glyphicon glyphicon-envelope">:   <a href="mailto:<%= @shop.business_user.email%>"><%= @shop.business_user.email%></a></span> <br/>
    				<% end %> 				
     				<span class="glyphicon glyphicon-phone-alt">:   <a href="tel:<%= @shop.phone%>"><%= @shop.phone%></a></span>
					</div>
					<div class="pull-right col-md-3 hidden-xs">	          
	          <%= render :partial => "layouts/social_media"%>
        	</div>
				</div>
			</div>
		</footer>
		<% if @shop.subdomain=="flyingsaucer" %>
		<style type="text/css">
			.main-content img{
				max-width: 100%;
				width: auto;
				text-align: left;
				padding-right: 10px;
			}
			.main-content p span, .main-content p{
				text-align: left;
				font-size: 14px !important;
			}
			.navbar.navbar-default, footer {
    			background-color: #272727;
    		}
    		.gallery_images img{
    			max-height: 100% !important;
    		}
    		body .main-content{
    			color: #999999;
    		}
		</style>
		<% end %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= render :partial => "layouts/googleanalytics"%>	
	<% if !@shop.auction.blank? %>		
		<script type="text/javascript">
		  $(document).ready(function() {
		    getTimer("<%= @shop.auction.startdatetime %>");
		  })
		</script>
	<% end %>
	</body>
</HTML>