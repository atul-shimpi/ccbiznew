<%= render :partial => "layouts/carousel"%>		
<% if !@shop.homecontent.blank? %>

	<div class="content_wrapper welcome_content">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">						
					<p class="about_content"><%= @shop.homecontent.html_safe%></p>
				</div>
			</div>
		</div>
	</div>


<% end %>
<% if !@shop.offers.latest.blank? %>
<div class="mid-section">
	<div class="container">
    	<div class="content_wrapper">
	    	<div class="">
				<div class="row paddingBottom">
					<div class="col-lg-12">
						<div class="section_heading clearfix">
							<h3 class="welcome_text">Upcoming Offers</h3>
							<% @shop.offers.latest.each do |offer|%>
							<div class="col-lg-3">
								<div class="offers_box">
									<div class="offer_products">
									<%= image_tag offer.image_url, :class=> "img-responsive" %>
										<% if !offer.discount.blank? %>
										<div class="offer_text">
											<p><%= offer.discount %> Discount</p>
										</div>
										<% end %>
									</div>
									<p class="title"><%= offer.name%></p>
								</div>
							</div>
							<%end%>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>
<% if !@shop.offers.featured.blank? %>
<div class="mid-section lower_section">
	<div class="container">
    	<div class="content_wrapper">
	    	<div class="">
				<div class="row paddingBottom">
					<div class="col-lg-12">
						<div class="section_heading clearfix">
							<h3 class="welcome_text">Latest Offers</h3>
							<% @shop.offers.featured.each do |offer|%>
							<div class="col-lg-3">
								<div class="offers_box">
									<div class="offer_products">
									<%= image_tag offer.image_url, :class=> "img-responsive" %>
										<% if !offer.discount.blank? %>
										<div class="offer_text">
											<p><%= offer.discount %> Discount</p>
										</div>
										<% end %>
									</div>
									<p class="title"><%= offer.name%></p>
								</div>
							</div>
							<%end%>	
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>
