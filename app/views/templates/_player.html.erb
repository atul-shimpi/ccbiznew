<!-- Auction page-->
<div class="container main-content auction_page">
  <div class="row">
    <div class="auction_container col-lg-12 clearfix">
      <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 players_section">
            <div class="players_list clearfix">
              <div class="col-lg-12">
                <div class="row tab_content_wrapper">
                  <div class="pull-left col-lg-2 col-md-2 col-sm-3 col-xs-3">
                  <% if @player.image.blank?%>
                    <img src="<%= image_path("no-image.jpg") %>">
                    <%else%>
                      <a href="<%= @player.image_url %>" data-lightbox="<%= @player.name %>" data-title="<%= @player.name %>">
                        <%= image_tag @player.image_url(:thumb), :class=> "owner-image" %>
                      </a>
                    <%end%>
                  </div>
                  <div class="pull-left col-lg-10 col-md-10 col-sm-9 col-xs-9">
                    <div class="col-lg-12">
                        <p><%= @player.name %></p>
                        <p>Age: <strong><%= @player.age %></strong></p>
                        <p>Base Price: <strong><%= @player.baseprice %></strong></p>
                        <p>Skills:
                          <% @player.skills.each_with_index do |skill, index| %>
                            <strong>
                              <%= skill.name %>&nbsp;(<%= @player.playerskills[index].rating %>/5)
                            </strong>
                          <% end %>
                        </p>
                        <p><%= @player.description.html_safe rescue "" %></p>
                      </div>
                  </div>
                </div>
              </div>
            </div>
      </div>
    </div>
  </div>
</div>
