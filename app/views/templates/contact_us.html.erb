<%= form_for @contact, url: '/contact_us',:html => { :class => '' , multipart: true  } do |f| %>
<div class="container main-content">
  <div class="row contact_page">
    <div class="col-lg-5 col-sm-5">
      <div class="enquiry_form">
        <form role="form">
        <p class="tab_title">Enquiry Form</p>
          <div class="form-group">
              <label>Name</label>
              <%= f.text_field :contactname, :class => 'text_field form-control', :placeholder => 'Enter text', :required => '' %>
          </div>
          <div class="form-group">
              <label>Email</label>
              <%= f.text_field :contactemail, :class => 'text_field form-control', :placeholder => 'Enter text', :required => '' %>
          </div>
          <div class="form-group">
              <label>Contact No</label>
              <%= f.text_field :contactnumber, :class => 'text_field form-control', :placeholder => 'Enter text', :required => '' %>
          </div>
          <div class="form-group">
              <label>Description</label>
              <%= f.text_area :contactinfo, :class => 'text_field form-control', :placeholder => 'Enter text', :required => '' %>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
          <%= f.hidden_field :shop_id, :value=>@shop.id %>
        </form>
      </div>
      <div class="star_ratings">
        <h4>Customer Ratings</h4>
        <fieldset class="rating">          
          <%= f.radio_button :shoprating, '5', :id=>"star5" %>
          <label class = "full" for="star5" title="Awesome - 5 stars"></label>          
          <%= f.radio_button :shoprating, '4.5', :id=>"star4half" %>
          <label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
          <%= f.radio_button :shoprating, '4', :id=>"star4" %>
          <label class = "full" for="star4" title="Pretty good - 4 stars"></label>
          <%= f.radio_button :shoprating, '3.5', :id=>"star3half" %>
          <label class="half" for="star3half" title="Meh - 3.5 stars"></label>
          <%= f.radio_button :shoprating, '3' , :id=>"star3" %>
          <label class = "full" for="star3" title="Meh - 3 stars"></label>
          <%= f.radio_button :shoprating, '2.5', :id=>"star2half" %>
          <label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
          <%= f.radio_button :shoprating, '2', :id=>"star2" %>
          <label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
          <%= f.radio_button :shoprating, '1.5' , :id=>"star1half" %>
          <label class="half" for="star1half" title="Meh - 1.5 stars"></label>
          <%= f.radio_button :shoprating, '1', :id=>"star1" %>          
          <label class = "full" for="star1" title="Sucks big time - 1 star"></label>
          <%= f.radio_button :shoprating, '0.5', :id=>"starhalf" %>          
          <label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
      </fieldset>
      </div>
    </div>
    <div class="col-lg-5 col-lg-offset-2 col-sm-5 col-sm-offset-2">
      <p class="tab_title">Contact us at :</p>
      <div class="contact_address">
        <%= @shop.address%><br >
        Telephone: <%= @shop.phone%><br>
        E-mail: <%= @shop.business_user.email%>
      </div>
      <div id="googleMap" style="height:270px;margin-top:60px;border-radius: 3px;">
        <%#= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@location.first}%2C#{@location.last}" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% if !@shop.latitude.blank? || !@shop.longitude.blank? %>
   <script src="http://maps.googleapis.com/maps/api/js"></script>
  <script src="bootstrap.min.js"></script>
<script>
function initialize() {
var myCenter = new google.maps.LatLng(<%= @shop.latitude%>,<%= @shop.longitude%>);
  var mapProp = {
    center:new google.maps.LatLng(<%= @shop.latitude%>,<%= @shop.longitude%>),
    zoom:15,
    mapTypeId:google.maps.MapTypeId.ROADMAP
  };
  var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
  var marker=new google.maps.Marker({
  position:myCenter,
  });

marker.setMap(map);
}
google.maps.event.addDomListener(window, 'load', initialize);


</script>
<%end%>






