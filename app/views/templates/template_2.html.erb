<!Doctype HTML>
<HTML>
	<HEAD>
		<!-- Latest compiled and minified CSS -->
		<%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag    'bootstrap-theme.min'%>
		<%= stylesheet_link_tag    'template_2'%>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<!-- <link rel="stylesheet" href="bootstrap.min.css">

		<!-- Optional theme -->
<!-- 		<link rel="stylesheet" href="bootstrap-theme.min.css">
		<link rel="stylesheet" type="text/css" href="common.css"> -->
 
	</HEAD>
	<body>
		<nav class="navbar navbar-default">
		  <div class="container">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <a class="navbar-brand" href="">
		      <%= image_tag @shop.avatar_url, :class=> "img-responsive" , :style => "width: 148px;height:â€†43px"%>
		      </a>
		    </div>


		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">
		        <li class="active"><a href="#">Home</a></li>
		        <li><a href="#">About Us</a></li>
		        <li><a href="#">Contact Us</a></li>
		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>

		<div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
      </ol>
            <% if !@shop.shop_images.blank?%>
      <div class="carousel-inner" role="listbox">
      <% @shop.shop_images.each_with_index do |shop_image, index|%>
        <div class="item <% if index == 0%>active<%end%>">
          <%= image_tag shop_image.image_url, :class=> "img-responsive third-slide" if  !shop_image.blank?%>
        </div>
        <%end%>
      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <%end%>
    </div>

		<div class="container main-content">
			<div class="latest_offers">
				<div class="row">
					<div class="section_heading"><h3>Latest Offers</h3></div>
					<% if !@shop.offers.latest.blank? %>
					<% @shop.offers.latest.each do |offer|%>
					<div class="col-lg-3">
						<div class="offers_box">
							<div class="offer_products">
							<%= image_tag offer.image_url, :class=> "img-responsive" %>
								<div class="offer_text">
									<p><%= offer.discount%>% Discount</p>
								</div>
							</div>
							<p class="title"><a href="#"><%= offer.name%></a></p>
						</div>
					</div>
					<%end%>
					<%end%>
				</div>
				<div class="row">
					<p class="pull-right"><a href="#">View more...</a></p>
				</div>
			</div>

			<div class="latest_offers">
				<div class="row">
					<div class="section_heading"><h3>Featured Offers</h3></div>
					<% if !@shop.offers.featured.blank? %>
					<% @shop.offers.featured.each do |offer|%>
					<div class="col-lg-3">
						<div class="offers_box">
							<div class="offer_products">
							<%= image_tag offer.image_url, :class=> "img-responsive" %>
								<div class="offer_text">
									<p><%= offer.discount%>% Discount</p>
								</div>
							</div>
							<p class="title"><a href="#"><%= offer.name%></a></p>
						</div>
					</div>
					<%end%>				
					<%end%>				
				</div>
				<div class="row">
					<p class="pull-right"><a href="#">View more...</a></p>
				</div>
			</div>

		</div>

		<footer class="clearfix">
			<div class="container">
				<div class="row">
					<p class="col-lg-12 copyright">Copyright @ 2015</p>
				</div>
			</div>
		</footer>
				<script src="jquery.min.js"></script>
		<!-- Latest compiled and minified JavaScript -->
		<script src="bootstrap.min.js"></script>

	</body>
</HTML>
