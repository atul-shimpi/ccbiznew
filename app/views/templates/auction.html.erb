
<!-- Auction page-->
<div class="container main-content auction_page">
  <div class="clearfix">
    <span class="pull-left">No. of visitors: 189</span>
    <span class="pull-right"><input type="button" value="Refresh Page" onClick="window.location.reload();" /></span>
  </div>
  <div class="row">
    <div class="auction_container col-lg-12 clearfix">
      <h3>Live Auction</h3>
      <div class="pull-left col-lg-7 col-sm-7 col-md-7 col-xs-12 auction_players_list">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
        <% if !@shop.auction.teams.blank?%>
          <% @shop.auction.teams.each_with_index do |team, index| %>
          <!-- <li role="presentation" class="active"><a href="#team1" aria-controls="team1" role="tab" data-toggle="tab">Team1</a></li> -->
          <li role="presentation" class=" <%= index == 0 ? 'active' : ''%>"><a href="#<%= team.name%>" aria-controls="team2" role="tab" data-toggle="tab"><%= team.name%></a></li>
          <!-- <li role="presentation"><a href="#team3" aria-controls="team3" role="tab" data-toggle="tab">Team3</a></li> -->
          <!-- <li role="presentation"><a href="#team4" aria-controls="team4" role="tab" data-toggle="tab">Team4</a></li> -->
          <%end%>
          <%end%>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
        <% if !@shop.auction.teams.blank?%>
              <% @shop.auction.teams.each_with_index do |team, index| %>
          <div role="tabpanel" class="tab-pane clearfix <%= index == 0 ? 'active' : ''%>" id="<%= team.name%>">

              <% team.players.in_groups_of(2) do |players| %>
           
            <div class="row tab_content_wrapper">
            <% players.each_with_index do |player, index|%>

            <% if !player.blank?%>
              <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 ">
                <p><b><%= link_to player.name, "player/"+player.id.to_s %></b></p>
                <p>Auction Price: <strong><%= player.auctionprice %></strong></p>
                <p>Skills: 
                <% player.skills.each_with_index do |skill, index| %>
                          
                          <strong><%= skill.name %>(<%= player.playerskills[index].rating %>/5)&nbsp;</strong>
                        <% end %>
                </p>
              </div>
              <%end%>
              <%end%>

            </div>
           <%end%>
          
          
          </div>
         <%end%>
         <%end%>
        </div>
      </div>
      <div class="pull-right col-lg-5 col-sm-5 col-md-5 col-xs-12 players_section">
        <p>Players</p>

        <% @players.each do |player|%>
        <div class="players_list clearfix">
          <div class="col-lg-12">
            <div class="row tab_content_wrapper">
              <div class="pull-left col-lg-3 col-md-3 col-sm-3 col-xs-3">
                <img src="<%= image_path("no-image.jpg") %>">
              </div>
              <div class="pull-left col-lg-9 col-md-9 col-sm-9">
                <div class="col-lg-12">
                    <p><%= link_to player.name, "player/"+player.id.to_s %></p>
                    <p>Base Price: <strong><%= player.baseprice %></strong></p>
                    <p>Skills: <strong>
                    <% player.skills.each_with_index do |skill, index| %>
                          
                          <strong><%= skill.name %>(<%= player.playerskills[index].rating %>/5)&nbsp;</strong>
                        <% end %>
                    </strong></p>
                  </div>
              </div>
            </div>
          </div>
          <%end%>


        </div>
      </div>
    </div>
  </div>
</div>
