<Doctype HTML>
<HTML>
	<HEAD>
		<!-- Latest compiled and minified CSS -->
				<%= stylesheet_link_tag    'bootstrap.min', media: 'all', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag    'bootstrap-theme.min'%>
		<%= stylesheet_link_tag    'template_3'%>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

	</HEAD>
	<body>
		<nav class="navbar navbar-default">
		  <div class="container">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <a class="navbar-brand" href="">
		      <%= image_tag @shop.avatar_url, :class=> "img-responsive" , :style => "width: 148px;height:â€†43px"%>
		      </a>
		    </div>


		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">
		        <li class="active"><a href="#"><span>Home</span></a></li>
		        <li><a href="#"><span>About Us</span></a></li>
		        <li><a href="#"><span>Contact Us</span></a></li>
		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>

		<div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
      </ol>
            <% if !@shop.shop_images.blank?%>
      <div class="carousel-inner" role="listbox">
      <% @shop.shop_images.each_with_index do |shop_image, index|%>
        <div class="item <% if index == 0%>active<%end%>">
          <%= image_tag shop_image.image_url, :class=> "img-responsive third-slide" if  !shop_image.blank?%>
        </div>
        <%end%>
      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <%end%>
    </div>

		<div class="container main-content">
			<div class="row latest_offers">
				<div class="col-lg-8">
					<div class="section_heading clearfix">
						<h3 class="pull-left">About Us</h3>
						<%= image_tag "textstyl.jpg", :class => "img-responsive pull-left", :style => "margin-top: 16px;margin-left: 10px;"%>
					</div>
					<div class="offers_box">
						<div class="aboutus">
							<%= @shop.info%>
						</div>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="offers_box">
					<%= image_tag "aboutus.jpg", :class => "img-responsive"%>
					</div>
				</div>
			</div>

			<div class="row upcomin_off">
				<div class="section_heading">
				<%= image_tag "latest_offers.jpg", :class => "img-responsive title_head"%>
				</div>
				<div class="col-lg-12">
					<div class="upcoming_offers_container">
						<div class="upcoming_offers clearfix">
							<% if !@shop.offers.latest.blank? %>
							<% @shop.offers.latest.each do |offer|%>
							<div class="col-lg-3">
								<div class="offers_cont">
									<a href=""><%= image_tag offer.image_url, :class=> "img-responsive" %>
									</a>
									<div class="discount"><p><a href=""><%= offer.discount%>% Discount</a></p></div>
								</div>
								<p class="title"><a href=""><%= offer.name%></a></p>
							</div>
							<%end%>
							<%end%>
						</div>
					</div>
				</div>
			</div>

			<div class="row upcomin_off">
				<div class="section_heading">
				<%= image_tag "upcoming_offers.jpg", :class => "img-responsive title_head"%>
				</div>
				<div class="col-lg-12">
					<div class="upcoming_offers_container">
						<div class="upcoming_offers clearfix">
							<% if !@shop.offers.featured.blank? %>
							<% @shop.offers.featured.each do |offer|%>
							<div class="col-lg-3">
								<div class="offers_cont">
									<a href=""><%= image_tag offer.image_url, :class=> "img-responsive" %>
									</a>
									<div class="discount"><p class="discount"><a href=""><%= offer.discount%>% Discount</a></p></div>
								</div>	
								<p class="title"><a href=""><%= offer.name%></a></p>
							</div>
							<%end%>
							<%end%>

						</div>
					</div>
				</div>
			</div>
		</div>

		<footer class="clearfix">
			<div class="container">
				<div class="row">
					<div class="pull-right col-lg-3 address">
						<p>Way To Restaurant</p>
     				<span><%= @shop.address%></span>
					</div>
					<div class="pull-right col-lg-3 timings">
					
					</div>
					<p class="pull-left col-lg-6 copyright">Copyright @ 2015</p>
				</div>
			</div>
		</footer>
				<script src="jquery.min.js"></script>
		<!-- Latest compiled and minified JavaScript -->
		<script src="bootstrap.min.js"></script>

	</body>
</HTML>
