<%= form_for @shop_seo, url: adminshop_seodetails_action(@shop_seo, params[:action]), :html => { :class => '' , multipart: true  } do |f| %> 
	<% if @shop_seo.errors.full_messages.any? %>
	<% @shop_seo.errors.full_messages.each do |error_message| %>
	<%= error_message if @shop_seo.errors.full_messages.first == error_message %> <br />
	<% end %>
	<% end %>
  <div class="form-group">
      <fieldset>
	    <div class="form-group">
	      <%= f.label :title, :class => 'control-label' %>
	      <%= f.text_field :title, :class => 'text_field form-control', :placeholder => 'Enter text' %>
	    </div>
	    
	    <div class="form-group">
	      <%= f.label :metakeywords %><br />
	      <%= f.text_area :metakeywords, :class => 'text_field form-control' %>
	    </div>
	    <div class="form-group">
	      <%= f.label :metadescription %><br />
	      <%= f.text_area :metadescription, :class => 'text_field form-control' %>
	    </div>
	    <div class="form-group">
	      <%= f.label :pagename %><br />
	      <%= f.select :pagename, [['Home', "home"], ['About Us', "about"], ['Contact Us', "contact"], ['Events', "events"], ['Gallery', "gallery"], ['Auction', "auction"], ['Team', "team"], ['Donation', "donation"], ['Player', "player"]] %>
	      
	    </div>
	    <input type="hidden" id="shop_id" name="shop_id" value="<%=@shop.id%>">	    
	    <%= f.submit "Add", :class => 'btn btn-primary' %>
	    
	  </fieldset>
  </div>  
<% end %>
                                


