<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Single Business websites</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to "Create a New Business website", new_admin_single_business_user_path, :class => 'btn btn-primary' %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover dataTables-example" id="dataTables-example">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Phone</th>                  
                  <th>Address</th>
                  <th>Adhar Number</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>

                <% if !@users.blank?%>
                <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.phone %></td>
                  <td><%= user.address %></td>
                  <td><%= user.adharid %></td>
                  <td>                  
                    <%= link_to "Edit",
                     edit_admin_single_business_user_path(user), :class => 'btn btn-primary btn-mini' %>
                    <%= link_to "Delete",
                    admin_single_business_user_path(user),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
                  </td>
                </tr>
                <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>
<!-- /#page-wrapper -->
